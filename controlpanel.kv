<MainScreen>
    orientation: "vertical"

    MDBoxLayout:
        size_hint_y: None
        height: '48dp'
        md_bg_color: app.theme_cls.primary_dark
        MDIconButton:
            icon: "alpha-b-box-outline" if app.type == "B" else "alpha-s-box-outline"
            theme_text_color: "ContrastParentBackground"
            on_release: app.change_type()
        MDLabel:
            text: app.status
            theme_text_color: "ContrastParentBackground"
        MDLabel:
            size_hint_x: .1
            text: "{}".format(datetime.utcfromtimestamp(app.timer).strftime('%H:%M:%S'))
            theme_text_color: "Custom"
            text_color: (0,0,0,.8)
        MDIconButton:
            icon: "play"
            theme_text_color: "Custom"
            text_color: (0,0,0,.5) if app.running else (0,0,0,1)
            on_release: app.main.fuckin_good_start() if not app.fuckin_good_completed else app.start_stop(True)
        MDIconButton:
            icon: "coffee"
            theme_text_color: "Custom"
            text_color: (0,0,0,1) if app.running else (0,0,0,.5)
            on_release: app.start_stop(False)


    MDTabs:
        id: tabs
        tab_indicator_anim: True
        lock_swiping: True

        Tab:
            spacing: '8dp'
            padding: ['8dp', 0, '8dp', '8dp']
            title: "Действия"
            MDBoxLayout:
                padding: [0, '8dp', 0, 0]
                RecycleView:
                    data: app.actions
                    scroll_type: ['bars', 'content']

                    viewclass: 'ActionBox'
                    RecycleBoxLayout:
                        id: actions_parent
                        default_size: None, '72dp'
                        default_size_hint: 1, None
                        height: self.minimum_height
                        orientation: 'vertical'
                        size_hint_y: None
                        spacing: '8dp'
            MDBoxLayout:
                orientation: 'vertical'
                spacing: '8dp'
                MDCard:
                    id: stages_box
