<OneLineQueue@OneLineAvatarListItem>
    left_widget_source: ""
    ImageLeftWidget:
        source: root.left_widget_source

<Tab@MDBoxLayout+MDTabsBase>
    padding: "5dp"

<ActionBox>
    padding: ["6dp", "6dp"]
    elevation: 12
    opacity:
        0 if not app.fuckin_good_completed else \
        (self._min_opacity if ((self.only_before_pause and not app.need_pause) \
        or (self.only_start_over and (self.started_over or not app.start_over))) \
        else self._max_opacity)
    style: "outlined"
    line_color: app.theme_cls.primary_dark if root.active else (.2, .2, .2, .8)
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: root.name
        MDLabel:
            text: root.name
    MDLabel:
        text: "{}".format(datetime.utcfromtimestamp(root.timer).strftime('%M:%S'))
        size_hint_x: .15
    MDIconButton:
        icon: 'stop' if root.active else 'play'
        on_press: root.play_pause(not root.active)
        pos_hint: {"center_x": 1, "center_y": .5}


<ItemBox>
    size_hint_y: None
    height: "50dp"
    MDCheckbox:
        size_hint_x: .05
        id: use
        active: root.use
    MDTextField:
        size_hint_x: .5
        id: name
        text: root.name
        text_color: app.theme_cls.text_color
    MDTextField:
        size_hint_x: .2
        id: max_price
        text: str(root.max_price)
        text_color: app.theme_cls.text_color
    MDTextField:
        size_hint_x: .2
        id: bulk_price
        text: str(root.bulk_price)
        text_color: app.theme_cls.text_color
    MDTextField:
        size_hint_x: .15
        id: qty
        text: str(root.qty)
        text_color: app.theme_cls.text_color


<LogBox>
    MDIcon:
        size_hint_x: None
        width: "32dp"
        halign: "center"
        icon: root.icons[root.level-1][0]
        theme_text_color: 'Custom'
        text_color: root.icons[root.level-1][1]
    MDLabel:
        size_hint_x: .13
        text: root.datetime
        text_size: self.size
        valign: 'middle'
        halign: 'center'
    Button:
        background_color: (1,1,1,0)
        background_normal: ""
        size_hint_x: .15
        text: root.character
        text_size: self.width, None
        valign: 'center'
        halign: 'left'
    Widget:
        size_hint_x: .01
    Button:
        background_color: (1,1,1,0)
        background_normal: ""
        size_hint_x: .12
        text: root.trade_id
        text_size: self.width, None
        valign: 'middle'
        halign: 'center'
    Button:
        size_hint_x: None
        background_normal: "images/test/1.png"
        background_down: "images/test/1.png"
        border: [0,0,0,0]
        width: self.height
    Widget:
        size_hint_x: .01
    MDLabel:
        size_hint_x: .50
        text: root.text
        valign: 'center'
        halign: 'left'


<MiniCheckBox>
    state: "down"

<DatetimeTextInput>
    background_color: (1,1,1,.1)
    multiline: False
    valign: 'middle'
    halign: 'center'

<SettingRow@MDBoxLayout>:
    height: '48dp'
    size_hint_y: None
    text: ""
    padding: ["5dp", 0]
    MDLabel:
        text: root.text